<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv"
    app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/windowBackground">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/subcode"
                android:text="hello world"
                android:layout_alignParentTop="true"
                android:textSize="30sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="subjectname"
                android:id="@+id/subname"
                android:layout_below="@id/subcode"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="No of classes taken "
                android:id="@+id/noct1"
                android:layout_below="@+id/subname"
                android:textSize="25sp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/noct"
                android:textSize="20sp"
                android:text="noct"
                android:layout_below="@+id/subname"
                android:layout_toRightOf="@+id/noct1"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="No of classes attended "
                android:id="@+id/noat1"
                android:layout_below="@+id/noct1"
                android:textSize="25sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/noat"
                android:textSize="20sp"
                android:text="noct"
                android:layout_below="@+id/noct"
                android:layout_toRightOf="@+id/noat1"
                android:layout_toEndOf="@+id/noat1"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
